.question-flaw
  %ul.nav.nav-tabs
    %li{role: "presentation"}
      %a{href: '/question_record'} 做题记录
    %li.active{role: "presentation"}
      %a{href: '/question_flaw'} 错题本
    %li{role: "presentation"}
      %a 题目收藏

  %table.table
    %tr
      %td
  %table.table.result-table
    %tr
      %td 类型：
      %td
        %a.btn-default{href: '/question_flaw'} 全部
      %td
        %a.btn-default.question-flaw-single{href: 'javaScript:;', data:{ kind: "single_choice" }} 单选题
      %td
        %a.btn-default.question-flaw-multi{href: 'javaScript:;', data:{ kind: "multi_choice" }} 多选题
      %td
        %a.btn-default.question-flaw-fill{href: 'javaScript:;', data:{ kind: "fill" }} 填空题
      %td
        %a.btn-default.question-flaw-mapping{href: 'javaScript:;', data:{ kind: "mapping" }} 连线题
      %td
        %a.btn-default.question-flaw-bool{href: 'javaScript:;', data:{ kind: "bool" }} 判断题
      %td
        %a.btn-default.question-flaw-essay{href: 'javaScript:;', data:{ kind: "essay" }} 论述题
    %tr
      %td 时间：
      %td 
        %a.btn-default{href: '/question_flaw'} 全部
      %td
        %a.btn-default.flaw-in-aweek{href: 'javaScript:;', data:{kind: "a_week"}} 一周内
      %td
        %a.btn-default.flaw-in-amonth{href: 'javaScript:;', data:{kind: "a_month"}} 一个月内
      %td
        %a.btn-default.flaw-three-month{href: 'javaScript:;', data:{kind: "three_month"}} 三个月内
      %td{colspan: 3} 
        %input{type: "text", id: "time_first"}
        ——
        %input{type: "text", id: "time_second"}
        %a.btn-default.flaw-time-fragment{href: 'javaScript:;', data:{kind: "time_fragment"}}
          %i.glyphicon.glyphicon-search
        %span (例：2015-11-11)

  %table.table.table-hover.flaw-table
    %thead.flaw_thead
      %td
      %th.th_record_one 时间
      %th.th_record_two 题目
      %th.th_record_three 正确答案
      %th.th_record_four 答案解析
      %th.th_record_five 操作
    %tbody.flaw_tbody
      = render partial: "flaw_index_tr", locals: {question_flaw: @question_flaw}
  .flaw-bottom
    %input.flaw-checked-all{ type: "checkbox" } 全选
    %button.btn.btn-default{ type: "button" }
      %i.glyphicon.glyphicon-trash
      %span 批量删除记录
  .user_name
    - if current_user != nil 
      = current_user.name
    - else 
      %span 请登录

