.questionuesstion-index
  %table{:class=>"table table-striped"} 
    %thead
      %tr
        %th 编号
        %th 题目
        %th 答案
        %th 难度系数
        %th 类型
        %th 状态
        %th 添加时间
        %th 操作
    %tbody
      - @questions.each do |question|
        %tr
          %td
            - question.id = question.id.to_s
            = question.id
          %td
            = question.content
            - if question.kind == "single_choice"
              %br
              = question.choices
            - if question.kind == "multi_choice"
              %br
              - option_id = 1
              - question.choices.each do |choice_code|               
                %br
                = option_id
                %span :
                = choice_code
                - option_id = option_id+1
          %td
            - case question.kind
              - when "single_choice"
                - question.choice_answer_indexs.each do |choice_code|
                  = choice_code+1
                  %span ,
              - when "multi_choice"
                - question.choice_answer_indexs.each do |choice_code|
                  = choice_code+1
                  %span ,
              - when "bool"
                = question.bool_answer
              - when "mapping"
                - question.mapping_answer.each do |mapping_team|
                  %br
                  - mapping_team.each do |mapping|
                    = mapping
                    %span ,
              - when "fill"
                - question.fill_answer.each do |fill_team|
                  = fill_item
                  %span ,
              - when "essay"
                = question.essay_answer
          %td
            = question.level
          %td
            = question.kind
          %td
            = question.enabled
          %td
            = question.created_at
          %td
            %a{:role=>"button",class: "btn btn-success fix ",:href=>"javascript:;"}修改
            %a{:role=>"button",class: "btn btn-success ban ",:href=>"javascript:;"}禁用
            %a{:role=>"button",class: "btn btn-success delete ",:href=>"javascript:;"}删除
            %a{:role=>"button",class: "btn btn-success find-tag ",:href=>"javascript:;"}查看版本


